{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/bridge_service",
            "runtimeExecutable": "${workspaceFolder}/bridge_service/node_modules/.bin/electron",
            "windows": {
              "runtimeExecutable": "${workspaceFolder}/bridge_service/node_modules/.bin/electron.cmd"
            },
            "args" : ["."],
            "outputCapture": "std"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Decompile Scripts",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/decompile_scripts.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}"
        }
    ]
}
