{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Decompile Scripts",
            "type": "shell",
            "command": "python",
            "args": ["decompile_scripts.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$python"
        },
        {
            "label": "Compile Scripts",
            "type": "shell",
            "command": "python",
            "args": ["-m", "Scripts.compile.compile"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
