{
  "name": "sims4-tiktok-bridge-electron",
  "version": "1.0.0",
  "description": "TikTok Live Bridge Service for Sims 4 Mod - Electron App",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "old:start": "node bridge.js",
    "old:dev": "node bridge.js --verbose",
    "test": "node test-client.js",
    "test-sim-creation": "node test-sim-creation.js",
    "pkg:list": "node test-package-cli.js",
    "pkg:hair": "node test-package-cli.js --hair --names",
    "pkg:custom": "node test-custom-parser.js",
    "pkg:info": "node test-custom-parser.js --info",
    "pkg:validate": "node test-custom-parser.js --validate"
  },
  "keywords": [
    "tiktok",
    "live",
    "bridge",
    "sims4",
    "websocket",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@s4tk/models": "^0.6.14",
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "json-bigint": "^1.0.0",
    "openai": "^4.20.0",
    "tiktok-live-connector": "^2.0.7-beta1",
    "ws": "^8.14.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.sims4tiktokbridge.app",
    "productName": "Sims 4 TikTok Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "renderer.html",
      "renderer.js",
      "renderer.css",
      "preload.js",
      "bridge-service.js",
      "gift-mappings.js",
      "user-settings.js",
      "check-live.js",
      "config.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "engines": {
    "node": ">=14.0.0"
  }
}